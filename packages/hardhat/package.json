{
  "name": "@xpad/hardhat",
  "version": "1.0.0",
  "scripts": {
    "chain": "npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean",
    "format": "prettier --write \"*/**/*.{js,ts,tsx,css,md,json,sol}\"",
    "type-check": "echo 'not implemented'",
    "lint:ts": "echo 'not implemented'",
    "read:crossfitestnet": "npx hardhat run scripts/read.ts --network crossfitestnet",
    "write:crossfitestnet": "npx hardhat run scripts/write.ts --network crossfitestnet",
    "deploy:localhost": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:crossfitestnet": "npx hardhat run scripts/deploy.ts --network crossfitestnet",
    "deploy:juchain": "npx hardhat run scripts/deploy.ts --network juchain",
    "deploy:juchaintestnet": "npx hardhat run scripts/deploy.ts --network juchaintestnet",
    "etherscan:verify:crossfi": "npx hardhat run scripts/etherscanVerify.ts --network crossfi",
    "etherscan:verify:crossfitestnet": "npx hardhat run scripts/etherscanVerify.ts --network crossfitestnet",
    "etherscan:verify:juchain": "npx hardhat run scripts/etherscanVerify.ts --network juchain",
    "etherscan:verify:juchaintestnet": "npx hardhat run scripts/etherscanVerify.ts --network juchaintestnet"
  },
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/prompt-sync": "^4.2.3",
    "chai": "^4.3.7",
    "cli-select": "^1.1.2",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "node-hid": "2.1.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "prompt-sync": "^4.2.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  }
}
